<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#1a00beff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <TextView android:text="Huidige Speler"
                style="@style/GroteText.Rood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/huidigeSpeler"/>
            
            <TextView android:text=" is aan zet"
                style="@style/GroteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:id="@+id/isAanZetText"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/huidigeSpeler"
                android:textColor="#ff000000" />
        
            <TextView
                style="@style/HetWoord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/beginTekst"
                android:id="@+id/huidigWoord"
                android:layout_below="@+id/huidigeSpeler"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:textColor="#ff000000"
                android:textColorHighlight="#ffff0011" />
    </RelativeLayout>

    <GridLayout
        android:id="@+id/ToetsenBord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom"
        android:layout_margin="5dp">

        

            <Button android:text="A"
                android:id="@+id/Abtn"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="letterClicked" />
            <Button android:text="B"
                android:id="@+id/Bbtn"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="letterClicked" />
            <Button android:text="C"
                android:id="@+id/Cbtn"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="letterClicked" />
            <Button android:text="D"
                android:id="@+id/Dbtn"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="letterClicked" />
            <Button android:text="E"
                android:id="@+id/Ebtn"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="letterClicked" />
            <Button android:text="F"
                android:id="@+id/Fbtn"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="letterClicked" />
            <Button android:text="G"
                android:id="@+id/Gbtn"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="letterClicked" />
            <Button android:text="H"
                android:id="@+id/Hbtn"
                android:layout_row="1"
                android:layout_column="3"
                android:onClick="letterClicked" />
            <Button android:text="I"
                android:id="@+id/Ibtn"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="letterClicked" />
            <Button android:text="J"
                android:id="@+id/Jbtn"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="letterClicked" />
            <Button android:text="K"
                android:id="@+id/Kbtn"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="letterClicked" />
            <Button android:text="L"
                android:id="@+id/Lbtn"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="letterClicked" />
            <Button android:text="M"
                android:id="@+id/Mbtn"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="letterClicked" />
            <Button android:text="N"
                android:id="@+id/Nbtn"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="letterClicked" />
            <Button android:text="O"
                android:id="@+id/Obtn"
                android:layout_row="3"
                android:layout_column="2"
                android:onClick="letterClicked" />
            <Button android:text="P"
                android:id="@+id/Pbtn"
                android:layout_row="3"
                android:layout_column="3"
                android:onClick="letterClicked" />
            <Button android:text="Q"
                android:id="@+id/Qbtn"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="letterClicked" />
            <Button android:text="R"
                android:id="@+id/Rbtn"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="letterClicked" />
            <Button android:text="S"
                android:id="@+id/Sbtn"
                android:layout_row="4"
                android:layout_column="2"
                android:onClick="letterClicked" />
            <Button android:text="T"
                android:id="@+id/Tbtn"
                android:layout_row="4"
                android:layout_column="3"
                android:onClick="letterClicked" />
            <Button android:text="U"
                android:id="@+id/Ubtn"
                android:layout_row="5"
                android:layout_column="0"
                android:onClick="letterClicked" />
            <Button android:text="V"
                android:id="@+id/Vbtn"
                android:layout_row="5"
                android:layout_column="1"
                android:onClick="letterClicked" />
            <Button android:text="W"
                android:id="@+id/Wbtn"
                android:layout_row="5"
                android:layout_column="2"
                android:onClick="letterClicked" />
            <Button android:text="X"
                android:id="@+id/Xbtn"
                android:layout_row="5"
                android:layout_column="3"
                android:onClick="letterClicked" />
            <Button android:text="Y"
                android:id="@+id/Ybtn"
                android:layout_row="6"
                android:layout_column="1"
                android:onClick="letterClicked" />
            <Button android:text="Z"
                android:id="@+id/Zbtn"
                android:layout_row="6"
                android:layout_column="2"
                android:onClick="letterClicked" />

    </GridLayout>


</LinearLayout>
